curry : [A:Type] -> [B:A -> Type] -> [C : Sig A B -> Type] -> 
        ((p : Sig A B) -> C p) ->
		  ((x: A)  -> (y : B x) -> C (Prod x y))
curry = \ [A][B][C] f x y . f (Prod x y) 

uncurry : [A:Type] -> [B:A -> Type] -> [C : Sig A B -> Type] -> 
        ((x: A)  -> (y : B x) -> C (Prod x y)) ->
        ((p : Sig A B) -> C p) 
uncurry = \ [A][B][C] f p . case p of 
              Prod x y -> f x y 

