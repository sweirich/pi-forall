module Product where

import Equality

data Sig (A:Type)(B: A -> Type) : Type where
  Prod of (x:A) (B x)

proj1 : [A:Type] -> [B:A -> Type] -> Sig A B -> A 
proj1 = \[A][B] x . case x of 
  Prod x y -> x

proj2 : [A:Type] -> [B:A -> Type] -> (x : Sig A B) -> B (proj1[A][B] x)
proj2 = \[A][B] x . case x of 
  Prod z y -> y

